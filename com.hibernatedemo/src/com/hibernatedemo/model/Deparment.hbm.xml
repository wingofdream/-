<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping package="com.hibernatedemo.model">
	<class name="Department" table="T_Department">
		<id name="DepartmentID" column="DepartmentID" type="string" length="20">
			<generator class="assigned"></generator>
		</id>
		<property name="DepartmentName" column="DepartmentName" type="string"
			length="50"></property>
		<property name="Remark" column="Remark" type="text"></property>
		<many-to-one name="College" class="College">
			<column name="CollegeID"></column>
		</many-to-one>
	</class>

</hibernate-mapping>
